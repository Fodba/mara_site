{% extends 'base.html.twig' %}

{% block title %}Website{% endblock %}

{% block body %}
    <h1>Website</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ website.id }}</td>
            </tr>
            <tr>
                <th>Base_url</th>
                <td>{{ website.baseUrl }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ website.name }}</td>
            </tr>
            <tr>
                <th>Website_header</th>
                <td>{{ website.websiteHeader }}</td>
            </tr>
            <tr>
                <th>Website_description</th>
                <td>{{ website.websiteDescription }}</td>
            </tr>
            <tr>
                <th>Logo</th>
                <td>{{ website.logo }}</td>
            </tr>
            <tr>
                <th>Logo_texte</th>
                <td>{{ website.logoTexte }}</td>
            </tr>
            <tr>
                <th>Admin_email</th>
                <td>{{ website.adminEmail }}</td>
            </tr>
            <tr>
                <th>Admin_phone</th>
                <td>{{ website.adminPhone }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_website_index') }}">back to list</a>

    <a href="{{ path('app_website_edit', {'id': website.id}) }}">edit</a>

    {{ include('website/_delete_form.html.twig') }}
